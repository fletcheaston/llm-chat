{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "globalEnv": ["ARTIFACT_URL", "GCP_PROJECT_ID", "IMAGE_REPOSITORY"],
    "globalPassThroughEnv": [
        "ARTIFACT_URL",
        "GCP_PROJECT_ID",
        "IMAGE_REPOSITORY"
    ],
    "tasks": {
        "@fletcheaston/backend#setup": {
            "outputs": [".venv"]
        },
        "@fletcheaston/backend#codegen": {
            "dependsOn": ["@fletcheaston/backend#setup"],
            "outputs": ["openapi.yaml"]
        },
        "@fletcheaston/frontend#codegen": {
            "dependsOn": ["@fletcheaston/backend#codegen"]
        },
        "dev": {
            "dependsOn": ["^dev"],
            "persistent": true,
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "cache": false
        },
        "type:check": {
            "dependsOn": ["^type:check"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "lint:check": {
            "dependsOn": ["^lint:check"]
        },
        "format": {
            "dependsOn": ["^format"]
        },
        "format:check": {
            "dependsOn": ["^format:check"]
        },
        "test": {
            "dependsOn": ["^test"]
        }
    }
}